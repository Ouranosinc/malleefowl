###
# app configuration
# http://docs.pylonsproject.org/projects/pyramid/en/latest/narr/environment.html
###

[app:main]
use = egg:Phoenix

pyramid.reload_templates = true
pyramid.debug_authorization = false
pyramid.debug_notfound = false
pyramid.debug_routematch = false
pyramid.default_locale_name = en
pyramid.includes =
    pyramid_debugtoolbar
#    pyramid_tm
    pyramid_layout
    pyramid_deform
#    deform_bootstrap
#    deform_bootstrap_extra

# mongodb
mongodb.url = mongodb://localhost
mongodb.db_name = Phoenix

# By default, the toolbar only appears for clients from IP addresses
# '127.0.0.1' and '::1'.
debugtoolbar.hosts = 127.0.0.1 ::1 ${host} 

# deform
#pyramid_deform.template_search_path = phoenix:templates/deform

# mozilla persona browserid
persona.secret = 's3cReT++'
persona.audiences = ${www}
persona.siteName = Phoenix

# my login whitelist
phoenix.login.whitelist = carsten@linacs.org,

# csw service used
phoenix.csw =  ${csw}

# wps service used

phoenix.wps = ${wps}
#phoenix.wps = http://rsg.pml.ac.uk/wps/generic.cgi
#phoenix.wps = http://cida.usgs.gov/climate/gdp/process/WebProcessingService

# esgf search service
esgf.search = ${esgsearch}
#esgf.search = http://esgf-data.dkrz.de/esg-search
#esgf.search = http://pcmdi9.llnl.gov/esg-search

